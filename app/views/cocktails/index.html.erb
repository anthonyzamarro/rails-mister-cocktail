<div class="container">
  <div class="row">
    <div class="col-md-12">
    <h1 class="text-center cocktail-title">All Cocktails</h1>

    <ul class="cocktail-list">
      <% @cocktails.each do |cocktail| %>
      <div class="col-sm-4 text-center">
        <li class="cocktail-list-item">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
          <br>
          <% if cocktail.photo? %>
            <%= cl_image_tag cocktail.photo, width: 200, height: 300, crop: :fill %>
          <% else %>
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
            <% end %>
          </li>
      </div>
      <% end %>
    </ul>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= render "form" %>
  </div>
</div>
